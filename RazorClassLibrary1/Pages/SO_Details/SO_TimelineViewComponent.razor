@using RazorClassLibrary1.Services.HttpClientSrv.ServiceOrderRegisters.GetAllBySOId
@inject TooltipService tooltipService
@inject NotifierService NotifierService
@inject IGetServiceOrderRegistersBySOIdService GetServiceOrderRegistersBySOIdService

<RadzenPanel>
<RadzenTimeline Orientation="Orientation.Horizontal" class="rz-m-4">
    <Items>
        @foreach (var item in ServiceOrder.Registers.Reverse())
        {
                <RadzenTimelineItem PointStyle="@(item.CreatedAt.ToString() == maxRegister ? PointStyle.Primary : PointStyle.Base)" MouseEnter="@(args => ShowTooltip(args, @item.Observations!, new TooltipOptions(){ Position = TooltipPosition.Bottom, Delay = 500, Duration = 5000  }) )">
                <LabelContent>
                    <RadzenText TextStyle="TextStyle.Subtitle2" class="rz-m-0">@item.CreatedAt.ToString("dddd, dd MMMM yyyy")</RadzenText>
                </LabelContent>
                <ChildContent>
                    @* @item.StateFrom - @item.StateTo : @item.Observations *@
                    @item.StateFrom - @item.StateTo
                </ChildContent>
            </RadzenTimelineItem>
        }
    </Items>
</RadzenTimeline>
</RadzenPanel>