@using D20Tek.BlazorComponents
@using FSA.Razor.Components.Components.Shared

<FadeIn>
    <RadzenTabs SelectedIndex="0">
        <Tabs>
            <RadzenTabsItem Text="@Localizer["BasicInfo"]" Icon="page_info">
                <RadzenPanel>
                <RadzenStack Gap="1rem">
                    <RadzenRow>
                        <RadzenIcon Icon="calendar_month" /><RadzenColumn>@Localizer["ExecutionDate"]</RadzenColumn>
                        <RadzenColumn Size="8">
                            @ServiceOrderTask.ExecutionDate <CountdownTimer CountdownTarget="@ServiceOrderTask.ExecutionDate" LabelText="Remaining time:" ExpirationMessage="Happy Birthday!" />
                        </RadzenColumn>
                    </RadzenRow>
                    <RadzenRow>
                        <RadzenIcon Icon="subject" /><RadzenColumn>@Localizer["Observations"]</RadzenColumn>
                        <RadzenColumn Size="8">
                            @ServiceOrderTask.Observations
                        </RadzenColumn>
                    </RadzenRow>
                    <RadzenRow>
                        <RadzenIcon Icon="history_edu" /><RadzenColumn>@Localizer["State"]</RadzenColumn>
                        <RadzenColumn Size="8">
                            @ServiceOrderTask.ServiceOrderTaskState?.Description
                        </RadzenColumn>
                    </RadzenRow>
                    <RadzenRow>
                        <RadzenIcon Icon="quick_reference" /><RadzenColumn>@Localizer["ServiceOrder"]</RadzenColumn>
                        <RadzenColumn Size="8">
                            @ServiceOrderTask.ServiceOrder?.Number
                        </RadzenColumn>
                    </RadzenRow>
                </RadzenStack>
                </RadzenPanel>

            </RadzenTabsItem>
            <RadzenTabsItem Text="@Localizer["Documents"]" Icon="cases">
                <RadzenPanel><ServiceOrderTaskDocumentDetailsComponent ServiceOrderTask="ServiceOrderTask" /></RadzenPanel>
            </RadzenTabsItem>
        </Tabs>
    </RadzenTabs>
     
</FadeIn>
